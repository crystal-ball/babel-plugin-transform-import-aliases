{
  "name": "babel-plugin-transform-import-aliases",
  "version": "1.0.0",
  "description": "Transforms import aliases into resolveable paths",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/babel-plugin-transform-import-aliases.git"
  },
  "keywords": [
    "Babel",
    "transform",
    "import",
    "alias"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty src",
    "test:unit": "jest src",
    "format": "prettier --write 'src/*.{js,json}'"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@crystal-ball/commitizen-base": "2.4.0",
    "@crystal-ball/prettier-base": "2.0.0",
    "@crystal-ball/semantic-release-base": "2.16.0",
    "@types/jest": "25.2.1",
    "eslint-config-eloquence": "13.6.0",
    "husky": "4.2.5",
    "jest": "25.3.0"
  },
  "prettier": "@crystal-ball/prettier-base",
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  }
}
